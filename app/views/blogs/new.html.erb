<div class="container container-style">
  <div class="row pb-3">
    <%= form_with(model: @blog, url: blogs_path, class: "needs-validation", html: {novalidate: true}, local: true) do |f| %>
      <div class="col-9 mx-auto">
        <div class="row g-0 sticky-nav bg-dark">
          <div class="d-flex align-items-center">
            <div class="col-4"></div>
            <div class="col-4">
              <div class="text-center text-white">
                New Blog
              </div>
            </div>
            <div class="col-4">
              <div class="text-end">
                <%= f.submit "投稿", class:"btn btn-primary me-3" %>
                </div>
            </div>
          </div>
        </div>
        <div class="row g-0 border mb-5" style="min-height: 350px">
          <div class="row g-0 p-3" style="min-height: 150px">
            <div class="my-2">
              <%= f.text_field :title, class: "form-control ", placeholder: 'タイトル（最大50文字）', maxlength: "50", autofocus: true , required: true %>
              <div class="invalid-feedback">
                タイトルを入力してください
              </div>
            </div>
            <div class="my-2">
              <%= f.label :blog_image, class: "visually-hidden " %>プロフィール画像<br />
              <%= f.file_field :blog_image, class:"form-control" %>
            </div>
            <div class="my-2">
              <%= f.text_area :article, class: "form-control ", placeholder: 'ブログを書きましょう', style: "height: 90vh", required: true %>
              <div class="invalid-feedback">
                内容を記述してください
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
  (function () {
    'use strict';

    
      var forms = document.querySelectorAll('.needs-validation')

      Array.prototype.slice.call(forms)
        .forEach(function (form) {
          form.addEventListener('submit', function (event) {
            if (!form.checkValidity()) {
              event.preventDefault()
              event.stopPropagation()
            }
            form.classList.add('was-validated')
          }, false)
        })
  })()
</script>