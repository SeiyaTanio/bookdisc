<div class="text-center"><small class="text-muted"><%= tweet.likes.count %>件のいいね</small></div>
<div class="d-flex justify-content-center">
  <% if current_user&.like?(tweet) %>
    <%= link_to '', like_path(current_user.likes.find_by(tweet: tweet)), method: :delete , class:"bi bi-heart-fill like-icon", remote: true %>
  <% else %>
    <%= link_to '', likes_path(tweet: tweet), method: :post, class:"bi bi-heart like-icon", remote: true %>
  <% end %>
</div>