<header class = "main-header">
    <div class = "app-name">
      <%= link_to image_tag("bookdisc-icon-image.png", class:"bookdisc-icon"), "/" %>
    </div>
    <div class = "search-bar">
      <form class="search-form" action="#">
        <input class='input-box' placeholder='キーワードから探す'>
        <button class="search-button">
        <%= image_tag "search.png", class:"search-icon" %>
        </button>
      </form>
    </div>
    <ul class='header-lists'>
      <% if user_signed_in? %>
        <li><%= link_to 'ユーザー名', "#", class: "user-nickname" %></li>
        <li><%= link_to 'ログアウト', "#", method: :delete, class: "logout" %></li>
      <% else %>
        <li><%= link_to 'ログイン', "#", class: "login" %></li>
        <li><%= link_to '新規登録', "#", class: "sign-up" %></li>
      <% end %>
    </ul>
</header>