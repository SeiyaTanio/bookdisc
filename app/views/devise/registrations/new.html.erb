<div class = "container container-style">
  <h3 class="my-5 text-center">アカウント作成</h3>
  
  <div class="row mb-5">
    <div class="col-4 mx-auto">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="text-danger">
          <small><%= render "devise/shared/error_messages", resource: resource %></small>
        </div>
        <div class = "mb-3">
          <div class="d-flex align-items-center mb-1">
            <%= f.label  :nickname %>
            <div class="badge bg-danger ms-2">必須</div>
          </div>
          <%= f.text_field :nickname, class: "form-control ", autofocus: true%>
        </div>
        <div class = "mb-3">
          <div class="d-flex align-items-center mb-1">
            <%= f.label :email %>
            <div class="badge bg-danger ms-2">必須</div>
          </div>
          <%= f.email_field :email, class: "form-control "%>
        </div>
        <% if @sns_id.present? %>
          <%= hidden_field_tag :sns_auth, true %>
        <% else %>
          <div class = "mb-3">
            <div class="d-flex align-items-center mb-1">
              <%= f.label :password %>（8文字以上）
              <div class="badge bg-danger ms-2">必須</div>
            </div>
            <%= f.password_field :password, class:"form-control"%>
          </div>
          <div class = "mb-3">
            <div class="d-flex align-items-center mb-1">
              <%= f.label :password_confirmation%>
              <div class="badge bg-danger ms-2">必須</div>
            </div>
            <%= f.password_field :password_confirmation, class:"form-control"%>
          </div>
        <% end %>
        <div class="text-center mb-3">
          <%= f.submit "アカウント作成", class:"btn btn-primary" %>
        </div>
      <% end %>
      <div class="mt-4 text-center">
        <i class="bi bi-facebook fs-5"></i>
        <%= link_to "Facebookアカウントで登録", user_facebook_omniauth_authorize_path, method: :post, class:"text-decoration-none link-secondary" %>
      </div>
      <div class="mt-2 text-center">
        <i class="bi bi-google fs-5"></i>
        <%= link_to "Googleアカウントで登録", user_google_oauth2_omniauth_authorize_path, method: :post, class:"text-decoration-none link-secondary" %>
      </div>
    </div>
  </div>
</div>
