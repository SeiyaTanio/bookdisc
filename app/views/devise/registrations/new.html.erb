<div class = "container container-style">
  <h3 class="my-5 text-center">アカウント作成</h3>
  
  <div class="row mb-5">
    <div class="col-4 mx-auto">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="text-danger">
          <small><%= render "devise/shared/error_messages", resource: resource %></small>
        </div>
        <div class = "mb-3">
          <div class="d-flex align-items-center mb-1">
            <%= f.label  :nickname, class: "visually-hidden" %>ニックネーム<br />
            <div class="badge bg-danger ms-2">必須</div>
          </div>
          <%= f.text_field :nickname, class: "form-control ", autofocus: true%>
        </div>
        <div class = "mb-3">
          <div class="d-flex align-items-center mb-1">
            <%= f.label :email, class: "visually-hidden" %>Eメール<br />
            <div class="badge bg-danger ms-2">必須</div>
          </div>
          <%= f.email_field :email, class: "form-control "%>
        </div>
        <div class = "mb-3">
          <div class="d-flex align-items-center mb-1">
            <%= f.label :password, class: "visually-hidden" %>
            <% if @minimum_password_length %>
            パスワード(<%= @minimum_password_length %> 文字以上)<br />
            <% end %>
            <div class="badge bg-danger ms-2">必須</div>
          </div>
          <%= f.password_field :password, class:"form-control"%>
        </div>
        <div class = "mb-3">
          <div class="d-flex align-items-center mb-1">
            <%= f.label :password_confirmation, class: "visually-hidden" %>パスワード(確認用)<br />
            <div class="badge bg-danger ms-2">必須</div>
          </div>
          <%= f.password_field :password_confirmation, class:"form-control"%>
        </div>
        <div class="text-center">
          <%= f.submit "アカウント作成", class:"btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
