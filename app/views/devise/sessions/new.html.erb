    <title>Signin Template · Bootstrap v5.0</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/5.0/examples/sign-in/">

    

    <!-- Bootstrap core CSS -->
<link href="../assets/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>

    
    <!-- Custom styles for this template -->
    <link href="signin.css" rel="stylesheet">
  </head>
  <body class="text-center">
    
<main class="form-signin">
  <%= link_to image_tag("bookdisc-icon-image.png", class:"bookdisc-icon mb-4"), "/" %>
  <h1 class="h3 mb-3 fw-normal">ログイン</h1>

  <%# ログイン時のエラーメッセージ  %>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.label :email, class: "visually-hidden" %>Eメール<br />
    <%= f.email_field :email, autofocus: true, class:"form-control", autocomplete: "email" %>
    <%= f.label :password, class: "visually-hidden" %><br />
      <% if @minimum_password_length %>
        <em>パスワード(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
    <%= f.password_field :password, class:"form-control", autocomplete: "new-password" %>
      <% if devise_mapping.rememberable? %>
        <div class="checkbox mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    <%= f.submit "アカウント作成", class:"w-100 btn btn-lg btn-primary" %>
  <% end %>
  <p class="mt-5 mb-3 text-muted">&copy; 2017-2020</p>
</main>


    
  </body>
</html>
