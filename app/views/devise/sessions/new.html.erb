<div class = "container">
  <div class="row py-5">
    <div class="col-4 mx-auto pt-3">
      <h3 class="my-5 text-center">ログイン</h3>
      <%# ログイン時のエラーメッセージ  %>
      <div class='login-flash-message text-danger mb-4'><small>
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </small></div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class = "mb-3">
          <div class="d-flex align-items-center mb-1">
            <%= f.label :email %>
            <div class="badge bg-danger ms-2">必須</div>
          </div>
          <%= f.email_field :email, class: "form-control "%>
        </div>
        <div class = "mb-3">
          <div class="d-flex align-items-center mb-1">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              (<%= @minimum_password_length %> 文字以上)<br />
            <% end %>
            <div class="badge bg-danger ms-2">必須</div>
          </div>
          <%= f.password_field :password, class:"form-control"%>
        </div>
        <div class="text-center">
          <%= f.submit "ログイン", class:"btn btn-primary" %>
        </div>
      <% end %>
      <div class="mt-4 text-center">
        <i class="bi bi-facebook fs-5"></i>
        <%= link_to "Facebookアカウントでログイン", user_facebook_omniauth_authorize_path, method: :post, class:"text-decoration-none link-secondary" %>
      </div>
      <div class="mt-2 text-center">
        <i class="bi bi-google fs-5"></i>
        <%= link_to "Googleアカウントでログイン", user_google_oauth2_omniauth_authorize_path, method: :post, class:"text-decoration-none link-secondary" %>
      </div>
<!--      <div class="mt-5 text-center">
        <%= link_to "パスワードを忘れた方はこちら", new_user_password_path ,class:"text-decoration-none link-secondary" %>
      </div> -->
    </div>
  </div>
</div>

