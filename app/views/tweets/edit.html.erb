<div class = "container">
  <h1 class="h3 mb-5 fw-normal text-center">ツイート編集</h1>

  <div class="mb-3 ">
    <%= form_with model: @tweet_form, url: tweet_path(@tweet.id), method: :patch, local: true do |f| %>
      <div class = "mb-3 col-6 mx-auto">
        <%= f.text_area :content, class: "form-control ", maxlength: "150", rows: "5", autofocus: true, autocomplete: "content" %>
      </div>
      <div class = "col-6 mx-auto">
        <%= f.submit "更新", class:"w-100 btn btn-lg btn-primary" %>
      </div>
    <% end %>
  </div>
</div>