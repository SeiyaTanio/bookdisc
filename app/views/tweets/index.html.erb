<div class="container mt-auto d-flex flex-column">
  <% @tweets.each do |tweet| %>
  <div class="card mb-3 mx-auto" style="width: 540px; height: 350px">
    <div class="row g-0 border-bottom position-relative" style="height: 280px">
      <div class="col-md-4 mt-4" >
        <div data-bs-toggle="tooltip" data-bs-placement="top" title="このユーザーのページに移動">
          <%= link_to image_tag(tweet.user.profile.image, class:"rounded mx-auto d-block", style: "max-width: 100px; max-height: 100px;"), "#" %>
        </div>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h3 class="card-title"><%= tweet.user.nickname %></h3>
          <p class="card-text"><%= tweet.content %></p>
          <p class="card-text position-absolute bottom-0 mb-2"><small class="text-muted"><%= l tweet.updated_at %></small></p>
        </div>
      </div>
    </div>
    <div class="row mt-2 d-flex justify-content-evenly">
      <div class="col-3">
        <p class="card-text"><small class="text-muted">1件のコメント</small></p>
      </div>
      <div class="col-3">
        <p class="card-text"><small class="text-muted">2件のいいね</small></p>
      </div>
      <div class="col-3">
      </div>
    </div>
    <div class="row mt-1 d-flex justify-content-evenly">
      <div class="col-3">
        <a href="#">コメントする</a>
      </div>
      <div class="col-3">
        <a href="#">いいね</a>
      </div>
      <div class="col-3">
        <a href="/tweets/<%=tweet.id%>">ツイート詳細</a>
      </div>
    </div>
  </div>
  <% end %>
</div>