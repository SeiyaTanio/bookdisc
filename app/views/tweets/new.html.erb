<h1>ツイート新規投稿</h1>

<div class = "tweets-form" >
  <%= form_with model: @tweet, url: tweets_path, local: true do |f| %>
    <div class = "content-form" >
      <h2>ツイート内容</h2>
      <%= f.text_area :content, class: "tweets-content", maxlength: "150" %>
    </div>
    <div class = "tweet-btn-contents">
      <%= f.submit "投稿する", class: "tweet-btn" %>
  <% end %>
  <%=link_to 'もどる', root_path, class:"back-btn" %>
</div>