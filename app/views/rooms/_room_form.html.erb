<div class="container container-style">
  <div class="row pb-3">
    <%= form_with(model: @room, url: url, class: "needs-validation", id: "new_post", html: {novalidate: true}, local: true) do |f| %>
      <div class="col-8 mx-auto">
        <div class="row g-0 sticky-nav bg-primary">
          <div class="d-flex align-items-center">
            <div class="col-4"></div>
            <div class="col-4">
              <div class="text-center text-white">
                <% if controller.action_name == "new"%>
                  New Room
                <% else %>
                  Edit Room
                <% end %>
              </div>
            </div>
            <div class="col-4">
              <div class="text-end">
                <%= f.submit "作成", class:"btn btn-outline-light me-3" %>
                </div>
            </div>
          </div>
        </div>
        <div class="row g-0 border mb-5" style="min-height: 350px">
          <div class="row g-0 p-3" style="min-height: 150px">
            <div class="my-4">
              <div class="row g-0">
                <%= f.text_field :room_name, class: "form-control form-control-lg", placeholder: 'ルーム名（最大50文字）【必須】', maxlength: "50", autofocus: true , required: true %>
                <div class="invalid-feedback">
                  ルーム名を入力してください
                </div>
              </div>
            </div>
            <div class="my-2">
              <div class="row g-0">
                <div class="col-10">
                <%= f.file_field :room_image, class:"form-control", id:"room-image"%>
                </div>
                <div class="col-2 d-flex justify-content-center bg-primary rounded">
                <%= f.label :room_image, class: "input-group-text bg-primary text-white border-0" %>
                </div>
              </div>
              <div class="form-text">「.png」または「.jpeg」の画像のみ</div>
              <% if controller.action_name == "edit"%>
                <div class="form-text">「ファイルを選択」しなければ元の画像のまま</div>
              <% end %>
              <div id="previews" class="mt-3 ms-2"></div>
            </div>
            <div class="my-2">
              <input name="room[user_ids][]" type="hidden" value=<%= current_user.id %>>
                <select name="room[user_ids][]" class="form-select is-invalid">
                  <option selected value="">招待するユーザーを選択してください</option>
                  <% User.where.not(id: current_user.id).each do |user| %>
                    <option value=<%= user.id %>><%= user.nickname %></option>
                  <% end %>
                </select>
              <div class="invalid-feedback">
                ユーザーを選択してください
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
  (function () {
    'use strict';
      var forms = document.querySelectorAll('.needs-validation')
      Array.prototype.slice.call(forms)
        .forEach(function (form) {
          form.addEventListener('submit', function (event) {
            if (!form.checkValidity()) {
              event.preventDefault()
              event.stopPropagation()
            }
            form.classList.add('was-validated')
          }, false)
        })
  })()
</script>

<script>
document.addEventListener('DOMContentLoaded', function(){
  const postForm = document.getElementById('new_post');
  const previewList = document.getElementById('previews');
  if (!postForm) return null;
  const fileField = document.querySelector('input[type="file"][name="room[room_image]"]');
  fileField.addEventListener('change', function(e){
    const alreadyPreview = document.querySelector('.preview');
    if (alreadyPreview) {
      alreadyPreview.remove();
    };
    const file = e.target.files[0];
    const blob = window.URL.createObjectURL(file);
    const previewWrapper = document.createElement('div');
    previewWrapper.setAttribute('class', 'preview');
    const previewImage = document.createElement('img');
    previewImage.setAttribute('class', 'rounded-circle user-icon');
    previewImage.setAttribute('src', blob);
    previewWrapper.appendChild(previewImage);
    previewList.appendChild(previewWrapper);
  });
});
</script>