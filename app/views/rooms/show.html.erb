<div class="container mt-5">
  <div class="row justify-content-center ">
    <div class="col-8 bg-info">
      <div class="sticky-top p-2">
        <div class="d-flex justify-content-evenly">
          <div>
            <%= @room.room_name %>
          </div>
          <% if user_signed_in? && current_user.id == @host_id %>
            <a class="btn btn-outline-primary" href="/rooms/<%=@room.id%>/edit" role="button">編集</a>
            <%= link_to '削除', room_path(params[:id]), method: :delete , class:"btn btn-outline-primary"%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row justify-content-center" style="height: 80vh;">
    <div class="col-8 border">
      <div class="row py-2 position-relative">
        <div class="col-2" >
          <div data-bs-toggle="tooltip" data-bs-placement="top" title="このユーザーのページに移動">
            <%= image_tag "bookdisc-icon-image.png", class:"rounded mx-auto d-block", style: "max-width: 100px; max-height: 100px;" %>
          </div>
        </div>
        <div class="col-5">
          ユーザー名
        </div>
        <div class="col-5">
          メッセージ
        </div>
      </div>
    </div>
  </div>
</div>
