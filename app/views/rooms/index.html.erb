<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-8 border border-bottom-0">
      <% @rooms.each do |room| %>
        <div class="row border-bottom py-2 position-relative">
          <div class="col-2" >
            <div data-bs-toggle="tooltip" data-bs-placement="top" title="このユーザーのページに移動">
              <%= image_tag "bookdisc-icon-image.png", class:"rounded mx-auto d-block", style: "max-width: 100px; max-height: 100px;" %>
            </div>
          </div>
          <div class="col-5">
            <a href="#" class="stretched-link text-decoration-none link-dark"><%= room.room_name %></a>
          </div>
          <div class="col-5">
            <div class="row text-truncate text-black-50">
              <% room.users.each do |user|%>
                <%= user.nickname %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
